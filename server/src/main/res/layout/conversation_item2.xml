<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="fill_parent">

    <TextView android:id="@+id/conversation_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp" />
    <TextView android:id="@+id/conversation_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="20dp" />
    <TextView android:id="@+id/conversation_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="count"
        android:textSize="20dp" />
    <TextView android:id="@+id/conversation_snippet"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="msg"
        android:textSize="20dp" />
    <Button android:id="@+id/bt_watch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="查看" />
    <Button android:id="@+id/bt_delete"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="删除" />

</LinearLayout>
