<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="wrap_content"
	android:layout_margin="5dp"
    android:gravity="center_vertical"
	android:layout_height="fill_parent">

    <ImageView android:id="@+id/appIcon"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="96dp"/>

    <TextView android:id="@+id/appName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
    <TextView android:id="@+id/appSize"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
    <TextView android:id="@+id/appVersion"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
    <TextView android:id="@+id/appLocalVersion"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
    <ProgressBar
        android:id="@+id/appProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

	<Button android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="同步到OneBoard"
		android:textSize="20dp"
        android:layout_marginRight="20dp"
		android:layout_gravity="center_vertical" />
</LinearLayout>
